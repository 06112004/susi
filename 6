Nano install_nginx.yml
Ansible-playbook-i local host,install_nginx.yml

Program 


- name: Install Nginx on webservers
  hosts: webservers
  become: yes  # Run tasks as sudo
  tasks:
    - name: Update apt cache
      apt:
        update_cache: yes

    - name: Install Nginx
      apt:
        name: nginx
        state: present

    - name: Start Nginx service
      service:
        name: nginx
        state: started
        enabled: yes

